	logging.info("STARTING dockemu-%s"%i)
	cmd="docker run -d -v %s/log/:/var/log/dockemu/ --name  dockemu-%s -e 'server=%s' %s dockemu-%s &>/dev/null"%(ROOT,i,server,image,i)
	print cmd
	try:
		print
		p = subprocess.Popen(cmd , shell=True)
